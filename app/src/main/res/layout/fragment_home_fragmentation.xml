<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2b9348"
        tools:context=".HomeFragmentation">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Dashboard"
                    android:textSize="@dimen/_20sdp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/titlestext"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="44dp"
                    app:layout_constraintHorizontal_bias="0.333"
                    app:layout_constraintStart_toEndOf="@+id/imageButton" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="@dimen/_290sdp"
                    android:layout_height="@dimen/_250sdp"
                    android:background="@drawable/pane_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="128dp"
                    app:layout_constraintHorizontal_bias="0.529"
                    android:id="@+id/constraintLayout">

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/circularProgressBar2"
                    android:layout_width="@dimen/_125sdp"
                    android:layout_height="@dimen/_125sdp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="24dp"
                    app:cpb_background_progressbar_color="#8cb369"
                    app:cpb_background_progressbar_width="5dp"
                    app:cpb_progress_direction="to_right"
                    app:cpb_progressbar_color="#edf6f9"
                    app:cpb_progressbar_width="10dp"
                    app:cpb_round_border="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Pending tasks"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    app:layout_constraintEnd_toStartOf="@+id/textView6"
                    app:layout_constraintHorizontal_bias="0.361"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                        android:text="null"
                        android:textSize="@dimen/_20sdp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:textAlignment="center"
                        android:id="@+id/done_task_count"
                        app:layout_constraintStart_toStartOf="@+id/circularProgressBar2"
                        app:layout_constraintEnd_toEndOf="@+id/circularProgressBar2"
                        app:layout_constraintHorizontal_bias="0.543"
                        app:layout_constraintTop_toTopOf="@+id/circularProgressBar2"
                        android:layout_marginTop="60dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="68dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Done tasks"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/circularProgressBar"
                    android:layout_width="@dimen/_125sdp"
                    android:layout_height="@dimen/_125sdp"
                    android:layout_marginTop="36dp"
                    app:cpb_background_progressbar_color="#8cb369"
                    app:cpb_background_progressbar_width="5dp"
                    app:cpb_progress_direction="to_right"
                    app:cpb_progressbar_color="#edf6f9"
                    app:cpb_progressbar_width="10dp"
                    app:cpb_round_border="false"
                    app:layout_constraintEnd_toStartOf="@+id/circularProgressBar2"
                    app:layout_constraintHorizontal_bias="0.722"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text4" />

                <TextView
                        android:text="TextView"
                        android:textSize="@dimen/_20sdp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:id="@+id/textView5"
                        android:textAlignment="center"
                        app:layout_constraintStart_toStartOf="@+id/circularProgressBar"
                        app:layout_constraintEnd_toEndOf="@+id/circularProgressBar"
                        app:layout_constraintTop_toTopOf="@+id/circularProgressBar"
                        android:layout_marginTop="60dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="@dimen/_290sdp"
                    android:layout_height="@dimen/_250sdp"
                    android:background="@drawable/pane_layout"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="60dp"
                    app:layout_constraintEnd_toEndOf="parent">

                <TextView
                        android:text="Menu"
                        android:textSize="@dimen/_20sdp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/titletext"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp" />

                <FrameLayout
                    android:id="@+id/frameLayout2"
                    android:layout_width="86dp"
                    android:layout_height="92dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:background="#4895ef"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titletext">

                    <ImageButton
                        android:id="@+id/imageButton1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/target" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="   Your task"
                        android:textColor="@color/white" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="144dp"
                    android:background="#9e2a2b"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titletext">

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="match_parent"
                        android:layout_height="73dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/done" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="    Done task"
                        android:textColor="@color/white" />

                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageButton
                    android:src="@drawable/list"
                    android:background="@android:color/transparent"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:id="@+id/imageButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                    android:layout_marginStart="32dp"
                    app:layout_constraintVertical_bias="0.32" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="@dimen/_290sdp"
                    android:layout_height="@dimen/_250sdp"
                    android:background="@drawable/pane_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                    android:id="@+id/constraintLayout2"
                    android:layout_marginTop="48dp"
                    app:layout_constraintHorizontal_bias="0.529">

                <com.github.mikephil.charting.charts.BarChart
                        android:layout_width="@dimen/_280sdp"
                        android:layout_height="@dimen/_245sdp"
                        android:id="@+id/bargraph"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                </com.github.mikephil.charting.charts.BarChart>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>