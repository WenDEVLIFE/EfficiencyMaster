<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2b9348"
        tools:context=".HomeFragmentation">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Dashboard"
                    android:textSize="@dimen/_20sdp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/titlestext"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintHorizontal_bias="0.333"
                    app:layout_constraintStart_toEndOf="@+id/imageButton" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="@dimen/_290sdp"
                    android:layout_height="@dimen/_250sdp"
                    android:background="@drawable/pane_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="80dp"
                    app:layout_constraintHorizontal_bias="0.34"
                    android:id="@+id/constraintLayout">

                <TextView
                        android:text="Pending tasks"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text4"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="48dp"
                        app:layout_constraintTop_toBottomOf="@+id/circularProgressBar"
                        app:layout_constraintEnd_toStartOf="@+id/textView6"
                        android:layout_marginTop="24dp"
                        app:layout_constraintHorizontal_bias="0.0" />

                <TextView
                        android:text="null"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/task_count"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5"
                        app:layout_constraintVertical_bias="0.833"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="92dp" />

                <TextView
                        android:text="null"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/done_task_count"
                        app:layout_constraintTop_toBottomOf="@+id/textView6"
                        app:layout_constraintStart_toEndOf="@+id/task_count"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="136dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.075" />

                <TextView
                        android:text="Done tasks"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/circularProgressBar"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="56dp" />

                <TextView
                        android:text="Task"
                        android:textSize="@dimen/_20sdp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp" />

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/circularProgressBar"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_125sdp"
                        app:cpb_background_progressbar_color="#8cb369"
                        app:cpb_background_progressbar_width="5dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="#edf6f9"
                        app:cpb_progressbar_width="10dp"
                        app:cpb_round_border="false"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3"
                        android:layout_marginTop="8dp" />

                <TextView
                        android:text="TextView"
                        android:textSize="@dimen/_20sdp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        app:layout_constraintStart_toStartOf="@+id/circularProgressBar"
                        app:layout_constraintEnd_toEndOf="@+id/circularProgressBar"
                        app:layout_constraintTop_toTopOf="@+id/circularProgressBar"
                        android:layout_marginTop="60dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="@dimen/_290sdp"
                    android:layout_height="@dimen/_250sdp"
                    android:background="@drawable/pane_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                    android:layout_marginTop="24dp"
                    app:layout_constraintHorizontal_bias="0.352">

                <TextView
                        android:text="Menu"
                        android:textSize="@dimen/_20sdp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/titletext"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp" />

                <FrameLayout
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:background="#4895ef"
                        android:id="@+id/frameLayout2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/titletext"
                        android:layout_marginTop="40dp"
                        android:layout_marginStart="24dp">

                    <ImageButton
                            android:src="@drawable/list"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="73dp"
                            android:id="@+id/imageButton1" />

                    <TextView
                            android:text="   Your task"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView7"
                            android:textColor="@color/white"
                            android:layout_gravity="bottom" />

                </FrameLayout>

                <FrameLayout
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:background="#ffb703"
                        android:id="@+id/frameLayout"
                        app:layout_constraintTop_toBottomOf="@+id/titletext"
                        android:layout_marginTop="40dp"
                        app:layout_constraintStart_toEndOf="@+id/frameLayout2"
                        android:layout_marginStart="28dp">

                    <ImageButton
                            android:src="@drawable/task"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="73dp"
                            android:id="@+id/imageButton2" />

                    <TextView
                            android:text="  Pending task"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView8"
                            android:textColor="@color/white"
                            android:layout_gravity="bottom" />

                </FrameLayout>

                <FrameLayout
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:background="#9e2a2b"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/frameLayout"
                        app:layout_constraintTop_toBottomOf="@+id/titletext"
                        android:layout_marginTop="40dp">

                    <ImageButton
                            android:src="@drawable/done"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="73dp"
                            android:id="@+id/imageButton3" />

                    <TextView
                            android:text="    Done task"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView9"
                            android:textColor="@color/white"
                            android:layout_gravity="bottom" />

                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageButton
                    android:src="@drawable/option"
                    android:background="#3a5a40"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:id="@+id/imageButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                    android:layout_marginStart="16dp"
                    app:layout_constraintVertical_bias="0.333" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>